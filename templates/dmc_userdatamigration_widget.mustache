{{!
    @template local_cveteval/dmc_diffmodelsmodifications_widget


    Example context (json):
    {
        "name": "FULL NAME',
        "idnumber": "IDNUMBER",
    }
}}

<div class="dmc-diffmodelsmodifications-widget">
    <h3>{{name}}</h3>
    <h4>{{#str}}appraisal:entity, local_cveteval{{/str}}</h4>
    {{#convertedappraisalsinfo}}
        <div>
            <span>{{#str}}userdatamigration:student, local_cveteval{{/str}}:</span><span class="font-weight-bold">{{student}}</span>
            <span>{{#str}}userdatamigration:appraiser, local_cveteval{{/str}}:</span> <span class="font-weight-bold">{{appraiser}}</span>
            <span class="badge badge-info ">{{#str}}userdatamigration:planning, local_cveteval{{/str}}:{{#planning}}{{label}}{{/planning}}</span>
            {{#grade}}<span>({{#str}}userdatamigration:grade, local_cveteval{{/str}}:</span> <span class="font-weight-bold">{{.}})</span>{{/grade}}
            <ul>
                {{#criteria}}
                    <li>
                        <span>{{#str}}userdatamigration:criterion, local_cveteval{{/str}}:{{#criterion}}{{label}}{{/criterion}}</span>
                        {{#grade}}<span class="badge badge-info">{{#str}}userdatamigration:grade, local_cveteval{{/str}}: <span class="font-weight-bold">{{.}}{{/grade}}
                    </li>
                {{/criteria}}
            </ul>
        </div>

    {{/convertedappraisalsinfo}}
    <h4>{{#str}}final_evaluation:entity, local_cveteval{{/str}}</h4>
    {{#convertedfinalevalsinfo}}
        <div>
            <span>{{#str}}userdatamigration:student, local_cveteval{{/str}}:</span><span class="font-weight-bold">{{student}}</span>
            <span>{{#str}}userdatamigration:assessor, local_cveteval{{/str}}:</span><span class="font-weight-bold">{{assessor}}</span>
            <span class="badge badge-info">{{#str}}userdatamigration:situation, local_cveteval{{/str}}:{{#planning}}{{label}}{{/planning}}</span>
            {{#grade}}<span>({{#str}}userdatamigration:grade, local_cveteval{{/str}}:</span><span class="font-weight-bold">{{.}})</span>{{/grade}}
        </div>
    {{/convertedfinalevalsinfo}}
    {{> local_cveteval/dmc_step_navigation }}
</div>