{{!
    @template local_cveteval/grade_widget


    Example context (json):
    {
        "gradeiconurl" : "http://moodle.com/",
        "gradetext" : "Text",
        "appraisalcontext": "Context",
        "appraisalcomment": "Comment",
        "criteriacomment": "Criteria comment",
        "criteriaid": 1,
        "appraisalid": 1,
        "appraiserid": 1
    }
}}

<div>
    <img src="{{gradeiconurl}}" alt="{{gradetext}}" class="cveteval-grade-widget-image img-responsive"/>
    {{#hassubgrades}}
        <span>{{#pix}}grade/multi, local_cveteval{{/pix}}</span>
    {{/hassubgrades}}
    {{#comment}}
        <button type="button" class="btn btn-light" data-toggle="modal" data-target="#modal-{{criteriaid}}-{{appraisalid}}-{{appraiserid}}-{{uniqid}}">{{#pix}}t/viewdetails{{/pix}}</button>

        <div class="modal fade" data-backdrop="false" data-region="modal-container" id="modal-{{criteriaid}}-{{appraisalid}}-{{appraiserid}}-{{uniqid}}" tabindex="-1" role="dialog" aria-labelledby="modallabel-{{uniqid}}"
             aria-hidden="true">
            <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg" role="document" data-region="modal" tabindex="0">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modallabel-{{uniqid}}">{{#str}}comments, local_cveteval{{/str}}</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <table  class="table">
                            <tbody>
                                <tr class="table-primary">
                                    <td colspan="2" class="text-center">{{#str}}appraisal:comment:header, local_cveteval{{/str}}</td>
                                </tr>
                                <tr class="table-secondary">
                                    <th scope="col">{{#str}}context, local_cveteval{{/str}}</th>
                                    <td>{{{appraisalcontext}}}</td>
                                </tr>
                                <tr class="table-secondary">
                                    <th scope="col">{{#str}}comment, local_cveteval{{/str}}</th>
                                    <td>{{{appraisalcomment}}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{#str}}ok{{/str}}</button>
                    </div>
                </div>
            </div>
        </div>
    {{/comment}}
</div>