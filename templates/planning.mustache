{{!
    @template local_cveteval/planning


    Example context (json):
    {
        "groupidformatted": "AAAA",
        "description": "Description",
        "title": "Title"

    }
}}
<div class="cveteval-persistent-card card">
    <h4 class="card-header">{{#str}}planning:entity, local_cveteval{{/str}}</h4>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">{{#str}}planning:groupid, local_cveteval{{/str}}: {{groupidformatted}}</li>
        <li class="list-group-item">{{#str}}planning:clsituationid, local_cveteval{{/str}}:  {{clsituationidformatted}}</li>
        <li class="list-group-item">{{#str}}planning:starttime, local_cveteval{{/str}}:  {{#userdate}} {{starttime}}, {{#str}} strftimedate {{/str}} {{/userdate}}</li>
        <li class="list-group-item">{{#str}}planning:endtime, local_cveteval{{/str}}:  {{#userdate}} {{endtime}}, {{#str}} strftimedate {{/str}} {{/userdate}}</li>
    </ul>
    <div class="card-footer text-muted">{{>local_cltools/persistent_info}}</div>
</div>
